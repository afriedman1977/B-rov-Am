<link href="~/Content/Signin.css" rel="stylesheet" />
<div class="container" style="width:400px">

    <form class="form-signin" method="POST" action="/Orders/Login">
        <h2 class="form-signin-heading">Please sign in</h2>
        <label for="username" class="sr-only">Username</label>
        <input type="text" id="usename" class="form-control" style="margin:5px" placeholder="Username" name="username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" style="margin:5px" placeholder="Password" name="password" required>
        @*<div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me"> Remember me
                </label>
            </div>*@
        <button class="btn btn-lg btn-primary btn-block" style="margin:5px" type="submit">Sign in</button>
    </form>

</div> <!-- /container -->