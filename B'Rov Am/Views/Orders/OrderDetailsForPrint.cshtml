@{
    Layout = null;
}
@using B_Rov_Am.Models;
@using BRovAm.data;
@model OrderDetailsViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" />
    <title>OrderDetailsForPrint</title>
</head>
<body>
    <div class="container" style="margin-top:70px">
        <h2>Order Details for Order Number - @Model.Order.OrderID</h2>
        <br />

        <h4>Name - @Model.Customer.FirstName @Model.Customer.LastNmae</h4>
        <h4>Address - @Model.Customer.Address</h4>
        <h4>Phone Number - @Model.Customer.PhoneNumber</h4>
        <br />

        <table class="table table-bordered" style="font-size:17px">
            <tr>
                <th>Item</th>
                <th>Description</th>
                <th>Color</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
            @foreach (OrderDetailExpanded od in Model.OrderDetails)
            {
                <tr>
                    <td>@od.ItemCode</td>
                    <td>@od.Description</td>
                    <td>@od.Color</td>
                    <td>@od.Size</td>
                    <td>@od.Price.ToString("C")</td>
                    <td>@od.Quantity</td>
                    <td>@od.TotalPrice.ToString("C")</td>
                </tr>
            }
        </table>
        <h4 style="text-align:right">Total Items = @Model.Order.TotalQuantity</h4>
        <h4 style="text-align:right">Total Cost = @Model.Order.TotalCost.ToString("C")</h4>
    </div>
    @section scripts{
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    }
</body>

</html>
